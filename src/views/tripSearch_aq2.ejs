<!DOCTYPE html>
<html>
<head>
  <title>Trip Details</title>
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }

    th, td {
      border: 1px solid black;
      padding: 8px;
      text-align: left;
    }

    th {
      background-color: #f2f2f2;
    }

    .input-values {
      margin-top: 20px;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <h1>Trip Details</h1>
  <% if (result.length === 0) { %>
    <p>No trips found.</p>
  <% } else { %>
    <table>
      <tr>
        <th>Color</th>
        <th>Departure Sequence</th>
        <th>Departure Time</th>
        <th>Arrival Sequence</th>
        <th>Arrival Time</th>
      </tr>
      <% for (const path of result) { %>
        <tr>
          <td><%= path.color %></td>
          <td><%= path.departure_sequence %></td>
          <td><%= path.departure_time %></td>
          <td><%= path.arrival_sequence %></td>
          <td><%= path.arrival_time %></td>
        </tr>
      <% } %>
    </table>
  <% } %>

  <% if (result.length > 0) { %>
    <div class="input-values">
      <p>Input Values: <%= day_str %></p>
    </div>
  <% } %>
</body>
</html>